{
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "nginxconfig.io": "^2.10.0"
    },
    "scripts": {
        "post-install-cmd": [
            "NginxConfig\\Generator::postInstall"
        ],
        "post-update-cmd": [
            "NginxConfig\\Generator::postUpdate"
        ]
    },
    "extra": {
        "nginxconfig.io": {
            "root": "/app/public",
            "location": {
                "/": {
                    "try_files": "$uri $uri/ /index.php?$args"
                }
            }
        }
    }
}